@inject NavigationManager NavigationManager
<ion-header>
    <ion-toolbar color="primary">
        <ion-title>Menu</ion-title>
    </ion-toolbar>
</ion-header>

<ion-content>
    <ion-list>
        <ion-list-header>
            Navigate
        </ion-list-header>
        <ion-menu-toggle auto-hide="false">
            <ion-item href="" @onclick='() => NavigationManager.NavigateTo("")' @onclick:preventDefault="true">
                <ion-icon slot="start" name='home'></ion-icon>
                <ion-label>
                    Home
                </ion-label>
            </ion-item>
            <ion-item href="counter" @onclick='() => NavigationManager.NavigateTo("counter")' @onclick:preventDefault="true">
                <ion-icon name="add-circle-outline" slot="start"></ion-icon>
                <ion-label>Counter</ion-label>
            </ion-item>
            <ion-item href="fetchdata" @onclick='() => NavigationManager.NavigateTo("fetchdata")' @onclick:preventDefault="true">
                <ion-icon name="add-circle-outline" slot="start"></ion-icon>
                <ion-label>Weather Forecast</ion-label>
            </ion-item>
        </ion-menu-toggle>
    </ion-list>
</ion-content>