@inject NavigationManager NavigationManager
<ion-header>
    <ion-toolbar color="primary">
        <ion-title>Menu</ion-title>
    </ion-toolbar>
</ion-header>

<ion-content>
    <ion-list>
        <ion-list-header>
            Navigate
        </ion-list-header>
        <ion-menu-toggle auto-hide="false">
            <ion-item href="" @onclick='() => NavigationManager.NavigateTo("")' @onclick:preventDefault="true">
                <ion-icon slot="start" name='home'></ion-icon>
                <ion-label>
                    Home
                </ion-label>
            </ion-item>
            <IonItem href="instances/create">
                <IonIcon name="add-circle-outline" slot="start"></IonIcon>
                <ion-label>Create Instance</ion-label>
            </IonItem>
        </ion-menu-toggle>
    </ion-list>
</ion-content>