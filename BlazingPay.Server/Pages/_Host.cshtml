@page "/*"

@using System.IO
@using BlazingPay.Abstractions.Contracts
@using BlazingPay.UI
@using Microsoft.AspNetCore.Mvc.RazorPages
@namespace BlazingPay.Server.Pages
@model BlazingPay.Server.Pages.HostPage
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>BlazingPay.Server</title>
    <base href="~/"/>
    <script type="module" src="_content/BlazingPay.UI/ionic/ionic.esm.js"></script>
    <script nomodule src="_content/BlazingPay.UI/ionic/ionic.js"></script>
    <script src="_content/BlazingPay.UI/wrapper.js"></script>

    <link rel="stylesheet" href="_content/BlazingPay.UI/ionic/ionic.bundle.css" />
    <script src="_content/BlazingPay.WebCommon/blazor.extensions.notifications.js"></script>
    <script src="_content/BlazorIonic/ionic-bridge.js"></script>
    <script src="_content/BlazorTransitionableRoute/jsInterop.js"></script>

</head>
<body>
<app>
    <component type="typeof(App)" render-mode="ServerPrerendered"/>
</app>

<div id="blazor-error-ui" style="display: none">
    <environment include="Staging,Production">
        An error has occurred. This application may no longer respond until reloaded.
    </environment>
    <environment include="Development">
        An unhandled exception has occurred. See browser dev tools for details.
    </environment>
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<script src="_framework/blazor.server.js"></script>
</body>
</html>